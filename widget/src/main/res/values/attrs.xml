<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="TemperatureView">
        <!--文字的颜色-->
        <attr name="tempV_color" format="color"/>
        <!--温度文字大小-->
        <attr name="tempV_textSize" format="dimension"/>
        <!--温度圈的半径-->
        <attr name="tempV_circleRadius" format="dimension"/>
        <!--温度文字和圆圈的水平距离-->
        <attr name="tempV_space" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="GradientProgressBar">
        <attr name="gpb_startColor" format="color"/>
        <attr name="gpb_endColor" format="color"/>
        <attr name="gqb_progress" format="integer"/>
    </declare-styleable>
</resources>